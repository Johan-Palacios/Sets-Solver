
root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
charset = utf-8

[*.{py}]
indent_style = space
indent_size = 4

[*.{js,json,y{a,}ml,html,cwl}]
indent_style = space
indent_size = 4

[*.{md,Rmd,rst}]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2
